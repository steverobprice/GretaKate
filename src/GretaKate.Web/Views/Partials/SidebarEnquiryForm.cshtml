@model GretaKate.Web.Models.EnquiryModel

@using (Html.BeginUmbracoForm("Submit", "Enquiry"))
{
    <div class="row">
		<div class="12u">
            @Html.TextBoxFor(m => m.Name, new { @class = "text", @placeholder = "Name", @required = "" })
		</div>
	</div>
    <div class="row">
		<div class="12u">
			@Html.TextBoxFor(m => m.Email, new { @class = "text", @placeholder = "Email", @required = "" })
		</div>
	</div>
	<div class="row">
		<div class="12u">
            @Html.TextAreaFor(m => m.Message, new { @class = "text", @placeholder = "Message", @required = "" })
		</div>
	</div>
	<div class="row">
		<div class="12u">
			<ul class="actions">
				<li><a href="#" class="button submit">Send Message</a></li>
			</ul>
		</div>
	</div>
    <div class="fancybox" style="display: none;">
        <h3>Thank you for your enquiry</h3>
        <p>We will get back to you soon.</p>
    </div>
}